@model TravelCRM.Models.AccountViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en" class="">
<head>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/Content/assets/animate.css/animate.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/assets/font-awesome/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/assets/simple-line-icons/css/simple-line-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/jquery/bootstrap/dist/css/bootstrap.css" type="text/css" />

    <link href="~/Content/font.css" rel="stylesheet" />
    <link href="~/Content/app.css" rel="stylesheet" />

</head>
<body>
    <div class="app app-header-fixed ">

        <div class="container w-xxl w-auto-xs">

            <div class="m-b-lg">
                <div class="wrapper text-center">
                    <strong>Travel CRM</strong>
                </div>

                <form name="form" class="form-validation" asp-area="Login" asp-controller="Account" asp-action="Login" method="post">
                    <div class="text-danger wrapper text-center" ng-show="authError">

                    </div>
                    <div class="list-group list-group-sm">
                        <div class="list-group-item">
                            <input type="text" placeholder="Email" class="form-control no-border" asp-for="UserID" required />
                        </div>
                        <div class="list-group-item">
                            <input asp-for="Password" type="password" placeholder="Password" class="form-control no-border" required />

                        </div>
                    </div>
                    <input type="submit"
                           value="Login" class="btn btn-lg btn-primary btn-block" />
                </form>
            </div>

        </div>

    </div>
    <script src="~/Content/jquery/jquery/dist/jquery.js"></script>
    <script src="~/Content/jquery/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/Scripts/ui-load.js"></script>

    <script src="~/Scripts/ui-jp.config.js"></script>
    <script src="~/Scripts/ui-jp.js"></script>
    <script src="~/Scripts/ui-nav.js"></script>
    <script src="~/Scripts/ui-toggle.js"></script>

    <script src="~/Scripts/ui-client.js"></script>

</body>
</html>





