@model TravelCRM.Models.AccountViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-area="Login" asp-controller="Account" asp-action="Login"
      method="post">
    <table>
        <tr>
            <td><label asp-for="UserID">Login ID:</label></td>
            <td><input asp-for="UserID" /></td>
        </tr>
        <tr>
            <td><label asp-for="Password">Password:</label></td>
            <td><input asp-for="Password" type="password" /></td>
        </tr>
        <tr>
            <td><label asp-for="RememberMe">RememberMe</label></td>
           
            <td><input type="checkbox" asp-for="RememberMe" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit"
                       value="Login" />
            </td>
        </tr>
    </table>
    <div asp-validation-summary="All"></div>
</form>




